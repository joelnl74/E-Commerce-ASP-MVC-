@model Category

<form method="post">
    <div class="border p-3 mt-4">
        <div>
            <h2 class="text-primary"> Delete Category</h2>
            <hr />
        </div>
        <div class="mb-3">
            <label>Category name</label>
            <input asp-for="Name" class="form-control" disabled />
        </div>
        <div class="mb-3">
            <label>Display order</label>
            <input input asp-for="DisplayOrder" class="form-control" disabled />
        </div>
        <div class="row">
            <div class="col-6">
                <button type="submit" class="btn btn-danger form-control">Delete</button>
            </div>
            <div class="col-6">
                <a asp-controller="Category" asp-action="Index" class="btn btn-secondary form-control">
                    Return
                </a>
            </div>
        </div>
    </div>
</form>